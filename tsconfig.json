{
    "compilerOptions": {
        "target": "esnext",
        "module": "ES6",
        "strict": true,
        "noEmit": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "jsx": "react",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "plugins": [
            {
                "name": "typescript-plugin-css-modules"
            }
        ]
    },
    "include": [
        "./src/**/*",
        "components"
    ]
}